{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "globals.d.ts",
    "libs/**/*",
    "dist/*",
    "dist/**/*",
    "scripts/*",
  ],
  "compilerOptions": {
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ESNext",
    "esModuleInterop": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "DOM"
    ],
    "types": [
      "node"
    ],
  },
  "references": [
    {
      "path": "./tsconfig.build.json"
    },
  ]
}